<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>

  <p>
    <%= form.label "posted on" %>
    <%= form.date_field "posted_on" %>
  </p>

  <p>
    <%= form.label "description" %>
    <%= form.text_field "description", "size" => 75 %>
  </p>
<!-- Hidden field to transfer state-->
  <%= form.hidden_field "place_id" %>  
 <%= form.submit %> 
 <p><a href="/places/<%= @post["place_id"] %>">Back to Places</a></p>
<% end %>