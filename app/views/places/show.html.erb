<h1><%= @place["name"] %></h1>

<ul>
    <% for post in @posts %>
        <h2><%= post["title"] %></h2>
        <p><%= post["posted_on"] %></p>
        <p><%= post["description"] %></p>
    <% end %>
</ul>
<!--Added query string for place_id-->
<a href="/posts/new?place_id=<%= @place.id %>"><button>New Post</button></a>

<p><a href="/places">Back to Places</a></p>
